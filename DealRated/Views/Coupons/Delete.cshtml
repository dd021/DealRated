@model DealRated.Models.Coupon

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Delete Coupon Details</h1>
</div>
<hr />
<div>
    <h4>Coupon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CouponCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CouponCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Percentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percentage) %
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status)
            {
                <p class="font-weight-bolder">Active</p>
            }
            else
            {
                <p class="font-weight-bolder">Not Active</p>
            }
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CouponID" />
        <input type="submit" value="Delete Details" class="btn btn-danger" />
    </form>
</div>
