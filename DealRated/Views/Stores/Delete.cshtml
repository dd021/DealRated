@model DealRated.Models.Store

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Delete Store Details</h1>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Store Logo
        </dt>
        <dd class="col-sm-10">
            <img src="~/stores/@Model.StoreID@Model.ExtName" class="img-fluid" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StoreID" />
        <input type="submit" value="Delete Details" class="btn btn-danger" /> 
    </form>
</div>
